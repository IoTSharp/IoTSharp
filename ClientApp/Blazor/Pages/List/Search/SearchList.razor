@namespace IoTSharp.ClientApp.Pages.List
@inherits LayoutComponentBase
@layout IoTSharp.ClientApp.BasicLayout

<PageContainer 
    Title="Search"
    TabList="_tabList"
    OnTabChange="HandleTabChange"
    TabActiveKey="@GetTabKey()">
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>Home</BreadcrumbItem>
            <BreadcrumbItem>List</BreadcrumbItem>
            <BreadcrumbItem>Search</BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <Content>
        <div style="text-align: center;">
            <Search Placeholder="请输入"
                    EnterButton="@("搜索")"
                    Size="large"
                    Style="max-width: 522px; width: 100%;" />
        </div>
    </Content>
    <ChildContent>
        @Body
    </ChildContent>
</PageContainer>