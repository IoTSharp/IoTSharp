<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>IoTSharp.Extensions.X509</RootNamespace>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <PackageId>IoTSharp.X509Extensions</PackageId>
    <Authors>Konrad Mattheis und Martin Berthold &amp;  MaiKeBing</Authors>
    <Copyright>Copyright (c) 2018-2024</Copyright>
    <Company>IoT#</Company>
    <RepositoryUrl>https://github.com/IoTSharp/IoTSharp.X509Extensions</RepositoryUrl>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/IoTSharp/IoTSharp/tree/master/IoTSharp.Extensions.X509</PackageProjectUrl>
    <PackageTags>qlik, PEM, certificates</PackageTags>
    <Description>Includes extensions for the class X509Certificate2, a signer, and the certificate creation.</Description>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
    <AssemblyName>IoTSharp.Extensions.X509</AssemblyName>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>6.0.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <PackageIcon>iotsharp128.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
	  <None Include="..\docs\static\img\iotsharp128.png">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
	  </None>
  </ItemGroup>
  

  <ItemGroup>
    <PackageReference Include="Portable.BouncyCastle" Version="1.9.0" />
  </ItemGroup>
 
 
</Project>