@namespace AntDesign.Pro.Template.Pages.Profile
@page "/profile/basic"

<PageContainer Title="Basic Profile">
    <Breadcrumb>
        <Breadcrumb>
            <BreadcrumbItem>Home</BreadcrumbItem>
            <BreadcrumbItem>Profile</BreadcrumbItem>
            <BreadcrumbItem>Basic Profile </BreadcrumbItem>
        </Breadcrumb>
    </Breadcrumb>
    <ChildContent>
        <Card>
            <Descriptions Title="退款申请" Style="margin-bottom: 32px;">
                <DescriptionsItem Title="取货单号">1000000000</DescriptionsItem>
                <DescriptionsItem Title="状态">已取货</DescriptionsItem>
                <DescriptionsItem Title="销售单号">1234123421</DescriptionsItem>
                <DescriptionsItem Title="子订单">3214321432</DescriptionsItem>
            </Descriptions>
            <Divider Style="margin-bottom: 32px;" />
            <Descriptions Title="用户信息" Style="margin-bottom: 32px;">
                <DescriptionsItem Title="用户姓名">付小小</DescriptionsItem>
                <DescriptionsItem Title="联系电话">18100000000</DescriptionsItem>
                <DescriptionsItem Title="常用快递">菜鸟仓储</DescriptionsItem>
                <DescriptionsItem Title="取货地址">浙江省杭州市西湖区万塘路18号</DescriptionsItem>
                <DescriptionsItem Title="备注">无</DescriptionsItem>
            </Descriptions>
            <Divider Style="margin-bottom: 32px;" />
            <div class="title">退货商品</div>
            <!--todo: table style not working-->
            <Table 
                Style="margin-bottom: 24px;"
                DataSource="@_data.BasicGoods"
                HidePagination>
                <AntDesign.Column Title="商品编号" @bind-Field="@context.Id" />
                <AntDesign.Column Title="商品名称" @bind-Field="@context.Name" />
                <AntDesign.Column Title="商品条码" @bind-Field="@context.Barcode" />
                <AntDesign.Column Title="单价" @bind-Field="@context.Price" />
                <AntDesign.Column Title="数量（件）" @bind-Field="@context.Num" />
                <AntDesign.Column Title="金额" @bind-Field="@context.Amount" />
            </Table>
            <div class="title">退货进度</div>
            <Table 
                Style="margin-bottom: 16px;"
                DataSource="@_data.BasicProgress"
                HidePagination>
                <AntDesign.Column Title="时间" @bind-Field="@context.Time" />
                <AntDesign.Column Title="当前进度" @bind-Field="@context.Rate" />
                <AntDesign.Column Title="状态" @bind-Field="@context.Status" />
                <AntDesign.Column Title="操作员ID" @bind-Field="@context.Operator" />
                <AntDesign.Column Title="耗时" @bind-Field="@context.Cost" />
            </Table>
        </Card>
    </ChildContent>
</PageContainer>